# -----------------------------------------------------------------------------
# CLOUDFLARE R2 (Storage)
# -----------------------------------------------------------------------------
# Get these from: https://dash.cloudflare.com > R2 > Manage R2 API Tokens

# Your Cloudflare Account ID (found in R2 endpoint URL)
CLOUDFLARE_ACCOUNT_ID=your_account_id

# R2 API credentials
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key

# Bucket names (create these in Cloudflare R2 dashboard)
CLOUDFLARE_R2_BUCKET_AVATARS=myjoe-avatars
CLOUDFLARE_R2_BUCKET_PROJECTS=myjoe-projects
CLOUDFLARE_R2_BUCKET_EXPORTS=myjoe-exports
CLOUDFLARE_R2_BUCKET_FEEDBACK=myjoe-feedback
# STRIPE (Billing)
# -----------------------------------------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys

# Publishable key (safe to expose in frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Secret key (NEVER expose in frontend - server-side only!)
STRIPE_SECRET_KEY=sk_test_...

# Webhook signing secret (from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs for your subscription plans
STRIPE_PRICE_ID_PRO_MONTHLY=price_...
STRIPE_PRICE_ID_PRO_YEARLY=price_...
STRIPE_PRICE_ID_TEAM_MONTHLY=price_...
STRIPE_PRICE_ID_TEAM_YEARLY=price_...

# -----------------------------------------------------------------------------
# RESEND (Email)
# -----------------------------------------------------------------------------
# Get these from: https://resend.com/api-keys

# API key (server-side only!)
RESEND_API_KEY=re_...

# Verified sender email (must be verified in Resend dashboard)
RESEND_FROM_EMAIL=noreply@myjoe.app

# Optional: Reply-to email
RESEND_REPLY_TO_EMAIL=support@myjoe.app

# -----------------------------------------------------------------------------
# GOOGLE AI (Gemini)
# -----------------------------------------------------------------------------
# Get from: https://aistudio.google.com/app/apikey

VITE_GEMINI_API_KEY=AIza...

# -----------------------------------------------------------------------------
# REPLICATE (Flux Coloring Book LoRA - Swift Tier)
# -----------------------------------------------------------------------------
# Get from: https://replicate.com/account/api-tokens

REPLICATE_API_TOKEN=r8_...

# -----------------------------------------------------------------------------
# APP CONFIGURATION
# -----------------------------------------------------------------------------

# App URL (used for magic links, redirects)
VITE_APP_URL=http://localhost:5173

# Environment: development | staging | production
VITE_ENV=development

# Enable debug logging
VITE_DEBUG=true

# -----------------------------------------------------------------------------
# FEATURE FLAGS (Override defaults)
# -----------------------------------------------------------------------------
# These override database feature flags for local development

# VITE_FEATURE_BILLING_ENABLED=false
# VITE_FEATURE_TEAMS_ENABLED=false
# VITE_FEATURE_SHARING_ENABLED=false

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------

# Rate limiting (requests per minute)
RATE_LIMIT_GENERATION=10
RATE_LIMIT_API=100

# Session timeout (in seconds)
SESSION_TIMEOUT=604800

# -----------------------------------------------------------------------------
# ANALYTICS (Optional)
# -----------------------------------------------------------------------------

# Google Analytics
# VITE_GA_MEASUREMENT_ID=G-...

# Mixpanel
# VITE_MIXPANEL_TOKEN=...

# Sentry (Error tracking)
# VITE_SENTRY_DSN=https://...@sentry.io/...
